{
  "expo": {
    "name": "Petopia",
    "slug": "petopia-petcare",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "petopia-petcare",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.petopia.petcare",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSUserNotificationUsageDescription": "We use notifications to remind you about pet care activities."
      }
    },
    "android": {
      "package": "com.petopia.petcare",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/foreground.png",
        "backgroundImage": "./assets/images/background.png",
        "monochromeImage": "./assets/images/foreground.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "petopia-petcare"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ],
      "permissions": []
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "enableBackgroundRemoteNotifications": true
        }
      ],
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Petopia to access your photos.",
          "cameraPermission": "Allow Petopia to take photos."
        }
      ],
      "expo-secure-store",
      [
        "@react-native-community/datetimepicker",
        {
          "android": {
            "datePicker": {
              "colorAccent": {
                "light": "#007AFF",
                "dark": "#0A84FF"
              },
              "textColorPrimary": {
                "light": "#007AFF",
                "dark": "#0A84FF"
              }
            },
            "timePicker": {
              "background": {
                "light": "#FFFFFF",
                "dark": "#1C1C1E"
              },
              "numbersBackgroundColor": {
                "light": "#007AFF",
                "dark": "#0A84FF"
              },
              "numbersTextColor": {
                "light": "#FFFFFF",
                "dark": "#FFFFFF"
              }
            }
          }
        }
      ],
      "expo-localization"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "b829ebb6-cac8-4731-94f5-4b130b65a827"
      }
    },
    "owner": "asugan"
  }
}
