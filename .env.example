# Petopia Environment Configuration
# Copy this file to .env and fill in your values

# API Configuration
# For local development, replace with your ngrok URL: https://your-ngrok-url.ngrok-free.app
EXPO_PUBLIC_API_URL=https://your-ngrok-url.ngrok-free.app

# For production, use your actual API URL
# EXPO_PUBLIC_API_URL=https://your-production-api.com

# RECOMMENDED: Set production API URL via EAS Secrets to keep it out of source control:
#   eas secret:set --scope project EXPO_PUBLIC_API_URL https://your-production-api.com
# Run this command before building for production: eas build --platform all --profile production

# RevenueCat Configuration
# Get your API keys from RevenueCat Dashboard > Project Settings > API Keys
# iOS: https://app.revenuecat.com/project/[PROJECT_ID]/ios
# Android: https://app.revenuecat.com/project/[PROJECT_ID]/android

# iOS API Key (public SDK key - safe to include in app)
EXPO_PUBLIC_REVENUECAT_IOS_API_KEY=your_revenuecat_ios_api_key

# Android API Key (public SDK key - safe to include in app)
EXPO_PUBLIC_REVENUECAT_ANDROID_API_KEY=your_revenuecat_android_api_key

# Entitlement ID (must match RevenueCat dashboard)
# This is the identifier for your Pro subscription entitlement
EXPO_PUBLIC_REVENUECAT_ENTITLEMENT_ID=Petopia Pro

# Product IDs (must match App Store Connect / Google Play Console)
# These are the product identifiers you created in your app stores
EXPO_PUBLIC_REVENUECAT_WEEKLY_PRODUCT_ID=petopia_weekly
EXPO_PUBLIC_REVENUECAT_MONTHLY_PRODUCT_ID=petopia_monthly
EXPO_PUBLIC_REVENUECAT_YEARLY_PRODUCT_ID=petopia_yearly
